=begin
{{> api_info}}
=end

require 'datadog_api_client/version'

module {{moduleName}}
  # Common files
  autoload :APIClient, '{{gemName}}/api_client'
  autoload :APIError, '{{gemName}}/api_error'
  autoload :Configuration, '{{gemName}}/configuration'

  # Models
  {{#models}}
  {{#model}}
  autoload :{{classname}}, '{{gemName}}/{{modelPackage}}/{{classFilename}}'{{/model}}
  {{/models}}

  # APIs
  {{#apiInfo}}
  {{#apis}}
  autoload :{{classname}}, '{{importPath}}'
  {{/apis}}
  {{/apiInfo}}

  class << self
    # Customize default settings for the SDK using block.
    #   {{moduleName}}.configure do |config|
    #     config.username = "xxx"
    #     config.password = "xxx"
    #   end
    # If no block given, return the default Configuration object.
    def configure
      if block_given?
        yield(Configuration.default)
      else
        Configuration.default
      end
    end
  end
end
